<!DOCTYPE html>
<html>
<head>
    <title>Admin Toko</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
<h2>Daftar Pembelian</h2>
<a href="/pembelian/tambah" class="btn btn-primary mb-3">Tambah Pembelian</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Produk</th>
            <th>Jumlah</th>
            <th>Total</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% pembelian.forEach(p => { %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.nama_produk %></td>
            <td><%= p.jumlah %></td>
            <td>Rp <%= p.total.toLocaleString() %></td>
            <td><%= p.status %></td>
            <td>
                <% if(p.status !== 'canceled'){ %>
                <a href="/pembelian/cancel/<%= p.id %>" class="btn btn-danger btn-sm">Cancel</a>
                <% } %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
</body>
</html>
